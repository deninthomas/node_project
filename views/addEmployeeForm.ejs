<form class="add-employee-form" id="openForm" action="/api/employees" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col bg-white p-4 rounded-5 mt-3 mb-3">
            <div><button type="button" class="close-button close-button-position-form position-absolute"
                    id="closeBtn" onclick="closeAddEmployeeForm(location.reload())"><i class="material-symbols-outlined">
                        close
                    </i></button></div>
            <h3>Add Employee</h3>
            <div class="row">
                    <div class="row">
                        <div class="col-md-12">
                            <label for="input-file" id="drop-area"></label>
                            <input type="file" name="image" accept="image/*" id="input-file" hidden>
                            
                            <div class="card align-items-center py-3 rounded-4 d-flex gap-2" id="img-view">
                                <img id="uploadedImage" src="/uploads/" alt="" style="width: 200px; border: 0; height: 100px;">
                                <i class="fa-solid fa-cloud-arrow-up" id="uploadIcon"></i>
                                <span id="uploadSpan">PNG, JPG files are allowed</span>
                                <div class="error" id="imageError">Image cannot be empty</div>
                                <button id="uploadImgBtn" class="btn btn-primary">Add / Change Image</button>
                            </div>
                        </div>
                    </div>
                    
            </div>

            <div class="row mt-4">
                <div class="col-md-2 form-group form-control-div">
                    <label for="select" class="required">Salutation</label>
                    <select class="form-select form-control rounded-4 mt-3" id="select">
                        <option value="" selected disabled></option>
                        <option value="Mr.">Mr.</option>
                        <option value="Mrs.">Mrs.</option>
                    </select>
                    <div class="error" id="salutationError">Salutation cannot be unselect</div>
                </div>

                <div class="col-md-5 form-group form-control-div">
                    <label class="required" for="firstName">First Name</label>
                    <input type="text" id="firstName" class="form-control rounded-4 opacity-50 mt-3"
                        placeholder="enter first name">
                    <div class="error" id="firstNameError">First name cannot be empty</div>
                </div>

                <div class="col-md-5 form-group form-control-div">
                    <label class="required" for="lastName">Last Name</label>
                    <input type="text" id="lastName" class="form-control rounded-4 opacity-50 mt-3"
                        placeholder="enter last name">
                    <div class="error" id="lastNameError">Last name cannot be empty</div>
                </div>
            </div>

            <div class="row mt-4 second-row">
                <div class="col-md-6 form-control-div">
                    <label for="emailAddress" class="required">Email Address</label>
                    <input type="email" id="emailAddress" class="form-control rounded-4 opacity-50 mt-3"
                        placeholder="mail@gmail.com">
                    <div class="error" id="emailError">Email cannot be empty</div>
                </div>

                <div class="col-md-6 form-control-div">
                    <label for="mobileNumber" class="required">Mobile Number </label>
                    <input type="text" id="mobileNumber" class="form-control rounded-4 opacity-50  mt-3"
                        placeholder="enter mobile number ">
                    <div class="error" id="mobileNumberError">Mobile number cannot be empty</div>
                </div>
            </div>

            <div class="row  mt-4 ">
                <div class="col-md-6 form-control-div">
                    <label for="dob" class="required">Date of Birth </label>
                    <input type="date" id="dob" class="form-control rounded-4 opacity-50 mt-3"/>
                    <div class="error" id="dobError">Date of birth cannot be empty</div>
                </div>

                <div class="col-md-6">
                    <label for="gender" class="required mb-2">Gender </label>
                    <div class="mt-3" id="gender">
                        <input type="radio" id="maleRadio" class="form-check-input rounded-4" name="gender"
                            value="male" />
                        <label class="form-check-label" for="maleRadio">Male</label>
                        <input type="radio" id="femaleRadio" class="form-check-input rounded-4"
                            name="gender" value="female">
                        <label class="form-check-label" for="femaleRadio">Female</label>
                    </div>
                    <div class="error" id="genderError">One of the gender cannot be unselect</div>

                </div>
            </div>

            <div class="col-md-12 mt-4 form-control-div">
                <label for="qualifications" class="form-label required">Qualifications </label>
                <input type="text" class="form-control rounded-4 opacity-50 mt-3" id="qualifications"
                    placeholder="enter qualifications">
                <div class="error" id="qualificationsError">Qualifications cannot be empty</div>

            </div>
            <div class="col-md-12 mt-4 form-control-div">
                <label for="address" class="form-label required">Address </label>
                <input type="text" class="form-control rounded-4 opacity-50 mt-3" id="address"
                    placeholder="enter address">
                <div class="error" id="addressError">Address cannot be empty</div>

            </div>
            <div class="row mt-4">
                <div class="col-md-6 form-control-div">
                    <label for="country" class="required">Country</label>
                    <select name="country" id="country" class="form-control rounded-4 form-select mt-3">
                        <option value="" selected disabled></option>
                        <option>United States</option>
                        <option>United Kingdom</option>
                        <option>France</option>
                        <option>India</option>
                        <option>Brazil</option>
                        <option>Australia</option>
                        <option>Canada</option>
                    </select>
                    <div class="error" id="countryError">Country cannot be unselect</div>
                </div>

                <div class="col-md-6 form-control-div">
                    <label for="state" class="required">State</label>
                    <select name="state" id="state" class="form-control rounded-4 form-select mt-3">
                        <option value="" selected disabled></option>
                        <option>New York City</option>
                        <option>Los Angeles</option>
                        <option>Chicago</option>
                        <option>Washington, D.C.</option>
                    
                        
                    </select>
                    <div class="error" id="stateError">State cannot be unselect</div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-md-6 form-control-div">
                    <label for="city" class="required">City</label>
                    <select name="city" id="city" class="form-control rounded-4 form-select mt-3">
                        <option value="" selected disabled></option>
                        <option>New Delhi</option>
                        <option>New york</option>
                        <option>manchuster</option>
                        <option>Liverpool</option>
                        <option>W.DC</option>
                        
                    </select>
                    <div class="error" id="cityError">District cannot be unselect</div>
                </div>

                <div class="col-md-6 form-control-div">
                    <label for="pin" class="required">Pin/Zip</label>
                    <input type="text" id="pin" class="form-control rounded-4 opacity-50 mt-3 mb-3"
                        placeholder="enter pin\zip">
                    <div class="error" id="pinError">Pin/Zip cannot be empty</div>

                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-6 form-control-div">
                    <label for="username" class="required">Username</label>
                    <input type="text" id="username" placeholder="enter username"
                        class="form-control rounded-4 opacity-50 mt-3 mb-3">
                    <div class="error" id="userNameError">Username cannot be empty</div>

                </div>
                <div class="col-md-6 form-control-div">
                    <label for="password" class="required">Password</label>
                    <input type="password" id="password" class="form-control rounded-4 opacity-50 mt-3 mb-3"
                        placeholder="enter password">
                    <div class="error" id="passwordError">Password cannot be empty</div>

                </div>
            </div>
            <div class="row mt-4 pb-3 form-control-div">
                <div class="gap-0 column-gap-3 d-flex justify-content-end">
                    <button class="cancel-btn p-3 button rounded-4" id="cancelAddFormBtn" type="button" onclick="closeAddEmployeeForm()">
                        Cancel
                    </button>
                    <button type="button" class="save-btn p-3 button rounded-4" id="saveChangesAddFormBtn"
                        onclick="submitForm(event)">
                        Add Employee
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>